<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage"
    android:background="#F0E4D1">

    <ImageView
        android:id="@+id/BarraSuperior"
        android:layout_width="411dp"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePerfil"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BarraSuperior"
        app:srcCompat="@drawable/imagemfoto"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="152dp"
        android:layout_height="31dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Pegue&amp;Panc"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/BarraSuperior"
        app:layout_constraintTop_toTopOf="@+id/BarraSuperior" />

    <Button
        android:id="@+id/Lupa"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_search"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconTint="#CE7D00"
        app:layout_constraintEnd_toStartOf="@+id/Carrinho"
        app:layout_constraintTop_toTopOf="@+id/BarraSuperior" />

    <Button
        android:id="@+id/Carrinho"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_cart"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconTint="#CE7D00"
        app:layout_constraintEnd_toEndOf="@+id/BarraSuperior"
        app:layout_constraintTop_toTopOf="@+id/BarraSuperior" />
</androidx.constraintlayout.widget.ConstraintLayout>