<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0E4D1">

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/fundobrancoadd"
        app:layout_constraintEnd_toEndOf="@+id/fundobrancoadd"
        app:layout_constraintStart_toStartOf="@+id/fundobrancoadd"
        app:layout_constraintTop_toTopOf="@+id/fundobrancoadd"
        app:srcCompat="@drawable/imagem" />

    <TextView
        android:id="@+id/novapub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nova Publicação"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fundobrancoadd"
        android:layout_width="183dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/novapub"
        app:srcCompat="@drawable/fundoimagem" />

    <ImageButton
        android:id="@+id/publisalvarButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/publiLayout"
        app:srcCompat="@drawable/botaocadastro" />

    <LinearLayout
        android:id="@+id/publiLayout"
        android:layout_width="394dp"
        android:layout_height="315dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundobrancoadd">

        <EditText
            android:id="@+id/editTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textAlignment="viewStart"
            android:textSize="25sp"
            tools:text="Título da publicação" />

        <EditText
            android:id="@+id/editPublicacao"
            android:layout_width="match_parent"
            android:layout_height="264dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:text="Vamos publicar juntos?" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
