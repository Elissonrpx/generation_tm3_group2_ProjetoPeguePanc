<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0E4D1"
    tools:context=".NovoProdutoFragment">

    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/BarraSuperior"
        android:layout_width="411dp"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePerfil"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BarraSuperior"
        app:srcCompat="@drawable/imagemfoto"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="152dp"
        android:layout_height="31dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Pegue&amp;Panc"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/BarraSuperior"
        app:layout_constraintTop_toTopOf="@+id/BarraSuperior" />

    <Button
        android:id="@+id/Lupa"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_search"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconTint="#CE7D00"
        app:layout_constraintEnd_toStartOf="@+id/Carrinho"
        app:layout_constraintTop_toTopOf="@+id/BarraSuperior"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/Carrinho"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#00FFFFFF"
        app:icon="@drawable/ic_cart"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconTint="#CE7D00"
        app:layout_constraintEnd_toEndOf="@+id/BarraSuperior"
        app:layout_constraintTop_toTopOf="@+id/BarraSuperior"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textNovoProduto"
        android:layout_width="227dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:text="Novo Produto"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BarraSuperior" />

    <ImageView
        android:id="@+id/imageFundo"
        android:layout_width="183dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNovoProduto"
        app:srcCompat="@drawable/fundoimagem" />

    <ImageView
        android:id="@+id/imageInserir"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageFundo"
        app:layout_constraintEnd_toEndOf="@+id/imageFundo"
        app:layout_constraintStart_toStartOf="@+id/imageFundo"
        app:layout_constraintTop_toTopOf="@+id/imageFundo"
        app:srcCompat="@drawable/imagem" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="imageInserir,imageFundo" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="394dp"
        android:layout_height="315dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFundo">

        <EditText
            android:id="@+id/editTextNomeProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ex: Trevo"
            android:inputType="textPersonName"
            android:minHeight="60dp" />

        <EditText
            android:id="@+id/editTextValorProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="R$0.00"
            android:inputType="textPersonName"
            android:minHeight="60dp" />

        <EditText
            android:id="@+id/editTextDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Descrição"
            android:inputType="textPersonName"
            android:minHeight="60dp" />

        <EditText
            android:id="@+id/editTextQuantidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Quantidade"
            android:inputType="textPersonName"
            android:minHeight="60dp" />

        <EditText
            android:id="@+id/editTextCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Categoria"
            android:inputType="textPersonName"
            android:minHeight="60dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>